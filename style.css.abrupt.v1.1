
nav{
  width: 600px;
  height: 100px;
  background-color: #93fbfb;
  color:#115869;
  display: flex;
  justify-content: space-between;
  align-items: bottom;
  padding:0px 50px;
  top:100px;
  z-index: 1;
}
.logo{
  font-size: 50px;
  front-weight:bold;
  font-family: 'lobster', cursive;
}
.menu{
  width:75% ;
  display: flex;
  justify-content: right;
  list-style: none;
}
.menu li{
  margin-left:15px
}
.menu li a{
  font-size:19px;
  color: darkcyan;
  text-decoration: none;
  transition: 0.3s ease;
}
.menu li a:hover{
  color:#ccc
}
.search{
  position: absolute;
  left: 300px;
  top: 75px;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  margin-right:20px;
}
.search form{
  display: flex;
  margin:0;
}
.search input{
  padding:5px;
  border:1px solid #ddd;
  outline:none;
  border-radius: 5px;
  margin-right: 10px;
  font-size: 16px;
}
.search input :hover{
  border: 1px solid #72a0d4
}
.search button{
  padding: 5px;
  background-color: #fff:
  border:none;
border-radius: 5px;
color:#333;
font-size: 16px;
cursor: pointer;
}

